{
  "manifest_version": 3,
  "name": "Echofy",
  "version": "1.0.0",
  "description": "Analyze selected text for credibility, bias, and AI-generated signals.",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "Echofy" },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 